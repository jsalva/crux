<div class="modal fade in overlay mt" style='display:block;' tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" {{action 'close'}}>&times;</button>
        <h4 class='centered'>{{title}}</h4>
      </div>
      <div class="modal-body">
        {{yield}}
      </div>
      <div class="modal-footer centered">
        <button type="button" class="btn btn-lg btn-warning" {{action 'close'}}>Close</button>
      </div>
    </div>
  </div>
</div>
